{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte",
				"htmlWhitespaceSensitivity": "ignore",
				"printWidth": 120,
				"singleAttributePerLine": false
			}
		}
	],
	"tailwindStylesheet": "./src/lib/css/global.css"
}
